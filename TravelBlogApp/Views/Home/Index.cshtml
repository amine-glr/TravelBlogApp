@model SearchViewModel
@{
    ViewData["Title"] = "Home Page";
}
<header class="masthead" style="       
        background-repeat: no-repeat;
        background-size: 100% 100%;
        height: 400px;
        background-image: url('assets/img/flat-lay-yellow-luggage-with-copy-space.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center" style=" padding-top: 100px" >
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1 style="font-style: italic">Travel Blogs</h1>
                    
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container px-4 px-lg-5" style="margin-top: 50px">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            @foreach (var item in Model.Result)
            {
            <div class="post-preview">
                
                    <h2 class="post-title" style="
                       
                       color: black;
                        font-weight: bold; ">
                
                        @Html.DisplayFor(modelItem => item.Title)
                    </h2>
                
                    <h4 class="post-content"> @Html.DisplayFor(modelItem => item.Content)</h4>
                
                    <p class="post-meta" style="font-style: italic">
                        Posted by: @Html.DisplayFor(modelItem => item.Author.NickName) |
                        Category : @Html.DisplayFor(modelItem => item.Category.Name) |
                        Created Date : @Html.DisplayFor(modelItem => item.CreatedDate)
                    </p>
                

            </div>
                <!-- Divider-->
                <hr class="my-4" />
            }

             
            </div>
    </div>
</div>

