@model SearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Blogs</h1>

<p>
    <a asp-action="Create">Add a New Post</a>
</p>
<form asp-action="Index" asp-controller="BlogItems" method="get">
    <div class="form-group">
        <label asp-for="SearchText" class="control-label"></label>
        <input asp-for="SearchText" class="form-control" />

    </div>
 
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
              Title
            </th>
            <th>
               Category
            </th>
            <th>
                CreatedDate
            </th>
            <th>
               IsPublished
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Result) {
        <tr>
            <td>
                @if (item.IsPublished)
                {
                    <span style="COLOR: green">@Html.DisplayFor(modelItem => item.Title)</span>
                }
                else
                {
                    <span style="COLOR: red">@Html.DisplayFor(modelItem => item.Title)</span>
                }

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
             
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>

            <td>
                @if (item.IsPublished)
                {
                    <a asp-action="UndoPublish" asp-route-id="@item.Id">Undo Publish</a>
                }
                else
                {
                    <a asp-action="Publish" asp-route-id="@item.Id">Publish</a>
                }

                | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
